# ============================================================================
# WORKERA PLATFORM ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
#
# For detailed setup instructions, see docs/PRODUCTION_READINESS_ANALYSIS.md
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=workera
DB_PASSWORD=your-secure-password
DB_DATABASE=workera
DB_SSL=false
DB_SYNCHRONIZE=true
DB_LOGGING=true

# ============================================================================
# AUTHENTICATION
# ============================================================================
# IMPORTANT: Generate a secure random string for production
# Run: openssl rand -hex 64
JWT_SECRET=your-super-secure-jwt-secret-change-in-production-min-32-chars
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# EMAIL / SMTP CONFIGURATION
# ============================================================================
# Choose your email provider and configure accordingly
#
# Option 1: SendGrid (recommended for production)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
#
# Option 2: Gmail (for development only)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
#
# Option 3: Amazon SES
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-ses-smtp-username
# SMTP_PASSWORD=your-ses-smtp-password
#
# Option 4: Mailgun
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=postmaster@your-domain.mailgun.org
# SMTP_PASSWORD=your-mailgun-smtp-password
#
# Option 5: Custom SMTP
# SMTP_HOST=mail.your-domain.com
# SMTP_PORT=587
# SMTP_USER=noreply@your-domain.com
# SMTP_PASSWORD=your-email-password

SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@workera.ai
SMTP_FROM_NAME=Workera

# ============================================================================
# AI / GOOGLE GEMINI
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ============================================================================
# VECTOR STORE
# ============================================================================
# File-based vector store path (default: ./data)
# Data is automatically persisted and restored on restart
VECTOR_STORE_PATH=./data

# Optional: Pinecone for high-scale production
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-east-1
# PINECONE_INDEX=workera-candidates

# ============================================================================
# FILE STORAGE (Optional)
# ============================================================================
# For resume uploads and file storage
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=workera-uploads

# ============================================================================
# RATE LIMITING
# ============================================================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# MULTI-TENANT
# ============================================================================
DEFAULT_TENANT_ID=11111111-1111-1111-1111-111111111111
ENABLE_MULTI_TENANT=true

# ============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================================================

# LinkedIn OAuth (for LinkedIn Jobs integration)
# LINKEDIN_CLIENT_ID=your-linkedin-client-id
# LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Indeed API
# INDEED_EMPLOYER_ID=your-indeed-employer-id
# INDEED_API_TOKEN=your-indeed-api-token

# Google Calendar (for interview scheduling)
# GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
# GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret

# Slack (for notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# REDIS (Optional - for caching/sessions)
# ============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================================================
# These should be set in frontend/.env.local
# NEXT_PUBLIC_API_URL=http://localhost:3001
