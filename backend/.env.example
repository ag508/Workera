# ============================================================================
# WORKERA BACKEND ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3001

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=workera
DB_PASSWORD=your-secure-password
DB_DATABASE=workera
DB_SSL=false
DB_SYNCHRONIZE=false
DB_LOGGING=true

# ============================================================================
# AUTHENTICATION
# ============================================================================
# IMPORTANT: Generate a secure random string for production
# openssl rand -hex 64
JWT_SECRET=your-super-secure-jwt-secret-change-in-production
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# RATE LIMITING
# ============================================================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ============================================================================
# AI / GOOGLE GEMINI
# ============================================================================
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_MODEL=gemini-2.0-flash

# ============================================================================
# VECTOR DATABASE (PINECONE)
# ============================================================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=workera-candidates

# ============================================================================
# FILE STORAGE (S3/GCS)
# ============================================================================
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=workera-uploads

# Alternative: Google Cloud Storage
# STORAGE_PROVIDER=gcs
# GCS_PROJECT_ID=your-gcp-project
# GCS_BUCKET=workera-uploads
# GCS_KEY_FILE=/path/to/service-account.json

# ============================================================================
# EMAIL (SMTP / SendGrid)
# ============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@workera.io
SMTP_FROM_NAME=Workera

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# MULTI-TENANT / WHITE-LABEL
# ============================================================================
DEFAULT_TENANT_ID=default-tenant
ENABLE_MULTI_TENANT=true

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Indeed
INDEED_EMPLOYER_ID=your-indeed-employer-id
INDEED_API_TOKEN=your-indeed-api-token

# Naukri
NAUKRI_PARTNER_ID=your-naukri-partner-id
NAUKRI_API_KEY=your-naukri-api-key

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# REDIS (for caching/sessions)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# DEMO ACCOUNT (for seeding)
# ============================================================================
# These credentials will be used to create a demo admin account when seeding
DEMO_ADMIN_EMAIL=admin@workera.ai
DEMO_ADMIN_PASSWORD=admin123
DEMO_ADMIN_FIRST_NAME=Demo
DEMO_ADMIN_LAST_NAME=Admin
